                                    <input type="text" name="namaJurusan" class="form-control" id="namaJurusan" placeholder="Jurusan">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-primary">Simpan</button>
                                    <a class="btn btn-default" href="/jurusan">Batal</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
